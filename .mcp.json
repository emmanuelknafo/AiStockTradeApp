{
  "servers": {
    "ado": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@azure-devops/mcp", "${input:ado_org}"]
    },
    "StockTrading": {
      "type": "stdio",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/AiStockTradeApp.McpServer/AiStockTradeApp.McpServer.csproj"
      ],
      "env": {
        "STOCK_API_BASE_URL": "${input:stock_api_base_url}"
      }
    },
    "StockTradeHttp": {
      "url": "https://mcp-aistock-dev-002.azurewebsites.net/mcp",
      "type": "http"
    }
  },
  "inputs": [
    {
      "id": "ado_org",
      "type": "promptString",
      "description": "Azure DevOps organization name  (e.g. 'contoso')"
    },
    {
      "id": "stock_api_base_url",
      "type": "promptString",
      "description": "Base URL for the Stock Trading API (e.g., http://localhost:5000 or https://your-api.azurewebsites.net)",
      "password": false
    }
  ]
}
