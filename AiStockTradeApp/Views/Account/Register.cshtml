@model AiStockTradeApp.ViewModels.RegisterViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Account_Register_Title"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="stock-card" style="margin-top:40px;">
                <div class="app-header" style="border-bottom:none; padding-bottom:0; margin-bottom:0;">
                    <h2 style="font-size:2rem; margin:0;">
                        <i class="fas fa-user-plus me-2"></i>
                        @Localizer["Account_Register_Title"]
                    </h2>
                </div>
                <div class="card-body" style="padding-top:0;">
                    <form asp-action="Register" asp-controller="Account" method="post" autocomplete="off">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input name="ReturnUrl" type="hidden" value="@ViewData["ReturnUrl"]" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="fas fa-user me-1"></i>
                                    @Localizer["Account_FirstName_Label"]
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="@Localizer["Account_FirstName_Placeholder"]" autofocus />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">
                                    <i class="fas fa-user me-1"></i>
                                    @Localizer["Account_LastName_Label"]
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="@Localizer["Account_LastName_Placeholder"]" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>
                                @Localizer["Account_Email_Label"]
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="@Localizer["Account_Email_Placeholder"]" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-1"></i>
                                @Localizer["Account_Password_Label"]
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="@Localizer["Account_Password_Placeholder"]" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="form-text">
                                @Localizer["Account_Password_Requirements"]
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i>
                                @Localizer["Account_ConfirmPassword_Label"]
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="@Localizer["Account_ConfirmPassword_Placeholder"]" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-user-plus me-2"></i>
                                @Localizer["Account_Register_Button"]
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">
                        @Localizer["Account_Register_HaveAccount"]
                        <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="text-decoration-none">
                            @Localizer["Account_Login_Link"]
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
