@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Account_AccessDenied_Title"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0 text-center">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Localizer["Account_AccessDenied_Title"]
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-5x text-warning"></i>
                    </div>
                    <h4 class="mb-3">@Localizer["Account_AccessDenied_Message"]</h4>
                    <p class="text-muted mb-4">@Localizer["Account_AccessDenied_Description"]</p>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>
                            @Localizer["Account_AccessDenied_BackHome"]
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            @Localizer["Account_Login_Link"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
